{
    "manifest_version": 2,
    "name": "RegExp Download Organizer",
    "version": "1.0",
    "description": "Organizes downloads using regular expressions",
    "permissions": [
      "downloads",
      "downloads.open",
      "webRequest",
      "storage",
      "webRequestBlocking",
      "*://*/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "options_ui": {
      "page": "options.html",
      "browser_style": true
    },
    "browser_action": {
      "default_popup": "options.html"
    },
    "icons": {
      "48": "icons/icon.png"
    }
  }